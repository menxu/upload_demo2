<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 主题 -->
    <style name="Theme.teamkn" parent="@android:Theme.Light.NoTitleBar">
        <item name="android:listViewStyle">@style/teamkn_list_theme</item>
    </style>

    <!-- 主题公共元素 -->
    <style name="teamkn_list_theme" parent="@android:style/Widget.ListView.White">
        <item name="android:smoothScrollbar">true</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:drawable/list_selector_background</item>
    </style>

    <!-- 公用 -->


    <!-- title_bar -->
    <style name="head_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#222222</item>
    </style>

    <style name="head_bar_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>

    <style name="head_bar_text_center" parent="head_bar_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="head_bar_user_avatar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="head_bar_button">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <style name="head_bar_button_go_back" parent="@style/head_bar_button">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">@string/button_go_back</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:onClick">go_back</item>
    </style>
    <style name="head_bar_button_go_back_remove_click" parent="@style/head_bar_button">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">@string/button_go_back</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>
   
    <style name="head_bar_button_go_back_register" parent="@style/head_bar_button">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">@string/button_go_back</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>
    
    <style name="head_bar_button_right" parent="@style/head_bar_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>

    <!-- bottom_bar -->
    <style name="bottom_bar">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:background">#eee</item>
    </style>
    <style name="bottom_bar_top_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ccc</item>
    </style>
    <style name="bottom_bar_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">2dp</item>
    </style>


    <!-- misc -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="feed_list_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="feed_grid_item" parent="@style/feed_list_item">
        <item name="android:background">#f4f4f4</item>
    </style>

    <style name="feed_list_item_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="feed_list_item_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">14dp</item>
    </style>

    <style name="feed_list_item_name" parent="feed_list_item_text">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="feed_list_item_created_at" parent="feed_list_item_text">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="feed_list_item_avatar" parent="head_bar_user_avatar">
    </style>

    <style name="feed_list_content">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="feed_detail_content">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingBottom">60dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- base_loading_layout -->
    <style name="loading_layout_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- base_about_layout -->
    <style name="teamkn_logo_about">
        <item name="android:layout_width">440px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="about_text" parent="text">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="about_text_s" parent="text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="about_site_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- base_login_layout -->
    <style name="login_layout_inputer">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_layout_button" parent="@style/login_layout_inputer">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- main_layout -->
    <style name="main_layout_table_item">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_layout_table_item_image">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">80px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="main_layout_table_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- ## new_note -->
    <style name="note_content_inputer_top_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ddd</item>
    </style>
    <style name="note_content_inputer_layout">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
   </style>

    <!-- photo_shower -->
    <style name="new_feed_layout_photo_shower">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:background">#f1f1f1</item>
    </style>
    <style name="new_feed_layout_photo_shower_top_line_open">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>
    <style name="new_feed_layout_photo_shower_top_line_close">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="new_feed_layout_photo_shower_image">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- dialog -->
    <style name="form_collection_dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#fff</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="form_collection_dialog_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="form_collection_dialog_inputer">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- new_feed_bottom_bar -->
    <style name="new_feed_bottom_bar_button" parent="@style/login_layout_inputer">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="teamkn.alert_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- teamkn自定义的 progress_dialog 用于 正在登录 等场合 -->
    <style name="teamkn_progress_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 标题栏 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 自身浮动 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 半透明的背景遮罩 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无背景 -->

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    
    <style name="user_info_panel">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>
